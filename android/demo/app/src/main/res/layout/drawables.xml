<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawables" />

    <Button
        android:layout_width="wrap_content"
        android:text="Simple Shape"
        android:layout_margin="5dp"
        android:background="@drawable/drawable_simple_shape"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Drawables"
        android:layout_margin="5dp"
        android:background="@drawable/drawable_roundcorner_trasparent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Drawables"
        android:layout_margin="5dp"
        android:background="@drawable/drawable_shape_gradient"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Drawables"
        android:layout_margin="5dp"
        android:background="@drawable/drawable_border_buttom_only"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Drawables"
        android:layout_margin="5dp"
        android:background="@drawable/drawable_border_top_buttom"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Drawables"
        android:layout_margin="5dp"
        android:background="@drawable/drawable_border_top_buttom"
        android:layout_height="wrap_content" />
</LinearLayout>