<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center_horizontal">
    <TextView android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:id="@+id/textLabel"
        android:text="JNI examples" android:layout_width="wrap_content"></TextView>
    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/editText1">
        <requestFocus></requestFocus>
    </EditText>
    <Button android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/buttonSubmit" android:text="Submit"></Button>

    <TextView android:textColor="@android:color/black"
        android:layout_width="match_parent" android:id="@+id/textView1"
        android:background="@android:color/white" android:layout_height="match_parent"
        android:text="Result will be shown here" android:layout_gravity="center"></TextView>
</LinearLayout>
